@import 'variables.pcss';

.menu {
  list-style-type: none;
  display: flex;
  align-items: center;
  padding: 0;
}

.widget-button {
  position: absolute;
  height: 40px;
  width: 120px;
  right: 30px;
  background: rgb(56, 68, 191);
  color: rgb(255, 255, 255);
  bottom: 30px;
  border: 0px;
  border-radius: 10px;
  cursor: pointer;
  outline: none;

